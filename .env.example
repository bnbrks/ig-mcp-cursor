# IG.com API Configuration
# For live environment
IG_API_KEY=your_api_key_here
IG_USERNAME=your_username_here
IG_PASSWORD=your_password_here

# Optional: If using 2FA, append the 6-digit code to your password
# IG_PASSWORD=your_password_here123456

# IG API Base URL (Live)
IG_API_URL=https://api.ig.com/gateway/deal

# Security Settings (Recommended for production/public deployments)
# Set to true to prevent credentials from being passed via tool calls
# REQUIRE_ENV_CREDENTIALS=false

# MCP Server API Key for endpoint protection (REQUIRED for public deployments)
# Generate with: openssl rand -hex 32
# Set this to prevent unauthorized access to your IG account
# MCP_SERVER_API_KEY=your_secure_random_key_here

# Require authentication before using tools (default: true)
# Set to false only if using network-level security (IP whitelisting, etc.)
# REQUIRE_AUTHENTICATION=true

